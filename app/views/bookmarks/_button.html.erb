<% if knowledge.bookmarked_by?(current_user) %>
  <%= link_to group_knowledge_bookmarks_path(group_id: knowledge.group_id, knowledge_id: knowledge.id), method: :delete do %>
    <i class="fas fa-star text-warning"></i>            
  <% end %>
<% else %>
  <%= link_to group_knowledge_bookmarks_path(group_id: knowledge.group_id, knowledge_id: knowledge.id), method: :post do %>
    <i class="far fa-star text-warning"></i>
  <% end %>
<% end %>